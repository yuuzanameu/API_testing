meta {
  name: Save assertions
  type: http
  seq: 1
}

put {
  url: {{URL}}/api/v1/api-testing/api/save-assertions/:api_id
  body: json
  auth: bearer
}

params:path {
  api_id: 16
}

auth:bearer {
  token: {{token}}
}

body:json {
  {
      "assertions": [
          {
              "expr": "res.body.token",
              "operator": "equals",
              "expected_value": "12121"
          },
          {
              "expr": "res.body.token",
              "operator": "equals",
              "expected_value": "token"
          }
      ]
  }
}

